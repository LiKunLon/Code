<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

  <servlet>
    <servlet-name>hi</servlet-name>
    <servlet-class>HiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hi</servlet-name>
    <url-pattern>/hi</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>select</servlet-name>
    <servlet-class>MySelect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>select</servlet-name>
    <url-pattern>/select</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>calc</servlet-name>
    <servlet-class>Calc</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>calc</servlet-name>
    <url-pattern>/calc</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>myrequest</servlet-name>
    <servlet-class>MyRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myrequest</servlet-name>
    <url-pattern>/myreq</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>myrefresh</servlet-name>
    <servlet-class>RefreshServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myrefresh</servlet-name>
    <url-pattern>/myref</url-pattern>
  </servlet-mapping>

  <!-- 跳转演示示例-->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>LocalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- setcookie 接口 -->
  <servlet>
    <servlet-name>setcookie</servlet-name>
    <servlet-class>SetCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>setcookie</servlet-name>
    <url-pattern>/setck</url-pattern>
  </servlet-mapping>

  <!-- getCookie 接口 -->
  <servlet>
    <servlet-name>getcookie</servlet-name>
    <servlet-class>GetCookieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getcookie</servlet-name>
    <url-pattern>/getck</url-pattern>
  </servlet-mapping>

  <!-- session 操作接口 -->
  <servlet>
    <servlet-name>mysession</servlet-name>
    <servlet-class>MySessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mysession</servlet-name>
    <url-pattern>/sess</url-pattern>
  </servlet-mapping>

  <!-- 文件上传 -->
  <servlet>
    <servlet-name>upload</servlet-name>
    <servlet-class>UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>

  <!-- 文件上传 -->
  <servlet>
    <servlet-name>mycalc2</servlet-name>
    <servlet-class>CalcAjaxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mycalc2</servlet-name>
    <url-pattern>/mycalc2</url-pattern>
  </servlet-mapping>

</web-app>