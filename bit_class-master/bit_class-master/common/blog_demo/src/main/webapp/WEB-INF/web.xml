<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">


    <!-- 登录 -->
    <servlet>
        <servlet-name>logServlet</servlet-name>
        <servlet-class>services.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 注册 -->
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>services.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <!-- 总文章列表 -->
    <servlet>
        <servlet-name>listServlet</servlet-name>
        <servlet-class>services.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <!-- 个人文章列表 -->
    <servlet>
        <servlet-name>articleListServlet</servlet-name>
        <servlet-class>services.ArticleListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>articleListServlet</servlet-name>
        <url-pattern>/artlist</url-pattern>
    </servlet-mapping>

    <!-- 文章详情 -->
    <servlet>
        <servlet-name>detailsServlet</servlet-name>
        <servlet-class>services.DetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detailsServlet</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

    <!-- 删除文章 -->
    <servlet>
        <servlet-name>delArticleServlet</servlet-name>
        <servlet-class>services.DelArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delArticleServlet</servlet-name>
        <url-pattern>/delart</url-pattern>
    </servlet-mapping>

    <!-- 添加文章 -->
    <servlet>
        <servlet-name>addArticleServlet</servlet-name>
        <servlet-class>services.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addArticleServlet</servlet-name>
        <url-pattern>/addart</url-pattern>
    </servlet-mapping>

    <!-- 修改文章 -->
    <servlet>
        <servlet-name>upArticleServlet</servlet-name>
        <servlet-class>services.UpArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upArticleServlet</servlet-name>
        <url-pattern>/upart</url-pattern>
    </servlet-mapping>

    <!-- 增加文章阅读量 -->
    <servlet>
        <servlet-name>countArticleServlet</servlet-name>
        <servlet-class>services.CountArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>countArticleServlet</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>

</web-app>